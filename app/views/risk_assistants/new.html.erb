<div class="container">
  <div class="row">
    <h1>Crear Nuevo RiskAssistant</h1>
    <%= form_with model: @risk_assistant, local: true do |form| %>
      <div>
        <%= form.label :name, "Nombre del Asistente" %>
        <%= form.text_field :name, placeholder: "Escribe un nombre" %>
      </div>
      <%= form.submit "Crear", class: "button" %>
    <% end %>

    <%= link_to 'Volver a la lista', risk_assistants_path, class: 'button' %>
  </div>
</div>