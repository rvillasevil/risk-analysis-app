<div class="container">
  <div class="row">
    <div class="col-md-4 offset-4" style="text-align:center">
      <h1>Crear Nueva Empresa</h1>
      <%= form_with model: @risk_assistant, local: true do |form| %>
        <div>
          <%= form.label :name, "Nombre de la empresa" %>
          <%= form.text_field :name, placeholder: "Escribe un nombre" %>
        </div>
        <%= form.submit "Crear", class: "btn btn-primary" %>
      <% end %>

      <%= link_to 'Volver a la lista', risk_assistants_path, class: 'btn btn-outline-success' %>
    </div>
  </div>
</div>