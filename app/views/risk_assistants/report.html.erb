<div class="container py-4">
  <h1 class="text-center mb-4">Informe Automático: <%= @risk_assistant.name %></h1>

  <% if @report_markdown.present? %>
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <pre class="mb-0" style="white-space: pre-wrap; font-family: 'Courier New', monospace; background-color: #f5f5f5; padding: 1rem; border-radius: 0.375rem;">
<%= @report_markdown %>
        </pre>
      </div>
    </div>
  <% else %>
    <div class="alert alert-warning text-center" role="alert">
      No se generó ningún informe.
    </div>
  <% end %>

  <div class="text-center">
    <%= button_to "Regenerar Informe", report_risk_assistant_path(@risk_assistant), method: :post, class: "btn btn-primary" %>
  </div>
</div>