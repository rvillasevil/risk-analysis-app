<div class="container">
  <h1>RiskAssistant: <%= @risk_assistant.name %></h1>

  <div class="row">
    <div class="col-md-6">
      <h5>Nombre: <%= @company_name.value if @company_name != nil %></h5>
      <h5>Sector: <%= @company_sector.value if @company_sector != nil %></h5>
      <h5>Empleados: <%= @company_employes.value if @company_employes != nil %></h5>
      <h5>Facturación: <%= @company_revenue.value if @company_revenue != nil %></h5>
      <h5>Localización: <%= @company_location.value if @company_location != nil %></h5>
      <h5>Actividad: <%= @company_activity.value if @company_activity != nil %></h5>
      <h5>Cubiertas: <%= @company_roof.value if @company_roof != nil %></h5>
      <h5>Cerramientos: <%= @company_walls.value if @company_walls != nil %></h5>
      <h5>Tabiquería: <%= @company_interior_walls.value if @company_interior_walls != nil %></h5>
      <% @messages.each do |mensaje| %>
        <h5><%= mensaje.key  %></h5>
        <h6><%= mensaje.value %></h6>
      <% end %>      
    </div>

    <div class="col-md-6">
      <%= @risk_assistant.thread_id %>
      <%= form_with url: risk_assistant_messages_path(@risk_assistant), method: :post, local: true, multipart: true do |form| %>
        <div>
          <%= form.label :content, 'Escribe tu mensaje:' %>
          <%= form.text_area :content, name: 'message[content]', rows: 3, required: true, placeholder: "Escribe tu mensaje aquí..." %>
          <%= file_field_tag :file %>
        </div>
        <%= form.submit 'Enviar', class: 'button' %>
      <% end %>

      <div id="messages">
        <% @risk_assistant.messages.order(created_at: :desc).each do |message| %>
          <div class="message <%= message.role %>">
            <strong><%= message.sender %>:</strong> <%= message.content %>
            <h3><%= @campo %></h3>
          </div>
        <% end %>
      </div>

      <% if @first_question %>
        <p><strong>Pregunta inicial:</strong> <%= @first_question %></p>
      <% end %>


      <%= link_to 'Volver a los RiskAssistants', risk_assistants_path, class: 'button' %>
    </div>
  </div>
</div>
