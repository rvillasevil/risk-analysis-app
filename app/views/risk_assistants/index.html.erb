<div class="container">
  <h2 style="padding: 20px;">Mis RiskAssistants</h2>
  <div class="row">
    <div class="row text-center">
      <div class="col-md-4" style="text-align: left">
        <h5>Cliente</h5> 
      </div>
      <div class="col-md-2">
        <h5>Informe descriptivo</h5>
      </div>
      <div class="col-md-2">
        <h5>Red flags</h5>
      </div>
      <div class="col-md-2">
        <h5>Resumen de datos</h5>
      </div>
      <div class="col-md-2">
        <h5>Eliminar</h5>
      </div>
    </div> 
    <div class="container text-center" style="padding: 20px;">
      <% @risk_assistants.each do |risk_assistant| %>      
        <div class="row" style="padding-top:10px;">
          <div class="col-md-4" style="text-align: left">
            <%= link_to risk_assistant_path(risk_assistant) do %> 
              Toma de datos de: <%= risk_assistant.name %>
            <% end %> 
          </div>
          <div class="col-md-2">
            <%= link_to report_risk_assistant_path(risk_assistant), class: "btn" do %>
              <h6>Report</h6>
            <% end %>
          </div>
          <div class="col-md-2">
            <%= link_to "Scoring de Riesgo", risk_assistant_path(risk_assistant) %>
          </div>
          <div class="col-md-2">
            <%= link_to risk_assistant_resume_path(risk_assistant) do %>
              <h6>Tabla resumen</h6>
            <% end %>
          </div>
          <div class="col-md-2">
            <%= link_to 'Delete', risk_assistant, data: { turbo_method: :delete, turbo_confirm: "¿Estas seguro?" }, class: 'btn btn-secondary btn-sm' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="">
    <%= link_to 'Añadir empresa', new_risk_assistant_path, class: 'btn btn-success' %>
  </div>
</div>

