<div class="container py-4">
  <h2 class="mb-4">Mis RiskAssistants</h2>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>
  <% if alert %>
    <div class="alert alert-danger"><%= alert %></div>
  <% end %>

  <!-- Cabecera tabla -->
  <div class="row text-center fw-semibold border-bottom pb-2 mb-3">
    <div class="col-md-4 text-start">Cliente</div>
    <div class="col-md-2">Informe descriptivo</div>
    <div class="col-md-2">Red flags</div>
    <div class="col-md-2">Resumen de datos</div>
    <div class="col-md-2">Eliminar</div>
  </div>

  <!-- Listado de risk_assistants -->
  <% @risk_assistants.order(created_at: :asc).each do |risk_assistant| %>
    <div class="row align-items-center py-2 border-bottom">
      <div class="col-md-4 text-start">
        <%= link_to "Toma de datos de: #{risk_assistant.name}", risk_assistant_path(risk_assistant), class: "text-decoration-none" %>
      </div>
      <div class="col-md-2 text-center">
        <%= link_to "Report", report_risk_assistant_path(risk_assistant), class: "btn btn-outline-primary btn-sm" %>
      </div>
      <div class="col-md-2 text-center">
        <%= link_to "Scoring de Riesgo", risk_assistant_path(risk_assistant), class: "btn btn-outline-info btn-sm" %>
      </div>
      <div class="col-md-2 text-center">
        <%= link_to "Tabla resumen", risk_assistant_resume_path(risk_assistant), class: "btn btn-outline-secondary btn-sm" %>
      </div>
      <div class="col-md-2 text-center">
        <%= link_to "Eliminar", risk_assistant, data: { turbo_method: :delete, turbo_confirm: "¿Estas seguro?" }, class: "btn btn-danger btn-sm" %>
      </div>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "Añadir empresa", new_risk_assistant_path, class: "btn btn-success btn-lg" %>
  </div>
</div>


