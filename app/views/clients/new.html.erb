<h1>New Client</h1>

<%= form_with model: @client, url: user_clients_path(@user), scope: :client do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.submit 'Create Client' %>
  </div>
<% end %>

<%= link_to 'Back', user_clients_path(@user) %>