<div class="container mt-4">
  <h1 class="mb-4">Clientes</h1>

  <div class="card mb-4">
    <div class="card-body">
      <h2 class="h4 mb-3">Clientes activos</h2>
      <% if @clients.any? %>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Nombre</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @clients.each do |client| %>
                <tr>
                  <td><%= link_to client.name, client_path(client) %></td>
                  <td class="text-end">
                    <%= link_to 'Revocar acceso', user_client_path(@user, client), method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-link text-danger p-0' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted mb-0">Aún no tienes clientes asociados.</p>
      <% end %>
    </div>
  </div>

    <div class="card mb-4">
    <div class="card-body">
      <h2 class="h4 mb-3">Tokens de invitación</h2>
      <p class="text-muted">Los tokens generados aquí no se envían automáticamente por correo electrónico.</p>

      <% if @client_invitations.any? %>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Correo electrónico</th>
                <th>Token</th>
                <th>Estado</th>
                <th>Creado</th>
              </tr>
            </thead>
            <tbody>
              <% @client_invitations.each do |invitation| %>
                <tr>
                  <td><%= invitation.email.presence || 'No especificado' %></td>
                  <td><code><%= invitation.token %></code></td>
                  <td><%= invitation.accepted_at? ? 'Aceptado' : 'Pendiente' %></td>
                  <td><%= l(invitation.created_at, format: :short) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted">Todavía no has generado tokens de invitación.</p>
      <% end %>

      <hr class="my-4">

      <h3 class="h5 mb-3">Generar un nuevo token</h3>
      <%= form_with url: user_clients_path(@user), scope: :user, local: true do |form| %>
        <div class="mb-3">
          <%= form.label :email, 'Correo electrónico del cliente', class: 'form-label' %>
          <%= form.email_field :email, class: 'form-control', required: true %>
        </div>
        <div class="mb-3">
          <%= form.label :token, 'Token (opcional)', class: 'form-label' %>
          <%= form.text_field :token, class: 'form-control', placeholder: 'Se generará automáticamente si se deja vacío' %>
        </div>
        <div class="text-end">
          <%= form.submit 'Generar token', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-end">
    <%= link_to 'Invitar cliente por correo', new_user_client_path(@user), class: 'btn btn-secondary' %>
  </div>
</div>  