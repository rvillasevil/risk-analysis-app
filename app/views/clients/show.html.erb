<h1><%= @client.name %></h1>
<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="h4 mb-3"><%= @client.name.presence || @client.email %></h1>

          <dl class="row mb-4">
            <dt class="col-sm-4 text-muted">Correo electr√≥nico</dt>
            <dd class="col-sm-8 mb-2"><%= @client.email %></dd>

            <% if @client.company_name.present? %>
              <dt class="col-sm-4 text-muted">Empresa</dt>
              <dd class="col-sm-8 mb-2"><%= @client.company_name %></dd>
            <% end %>

            <% if @client.owner.present? %>
              <dt class="col-sm-4 text-muted">Propietario</dt>
              <dd class="col-sm-8 mb-2"><%= @client.owner.name.presence || @client.owner.email %></dd>
            <% end %>

            <dt class="col-sm-4 text-muted">Fecha de alta</dt>
            <dd class="col-sm-8"><%= l(@client.created_at, format: :long) %></dd>
          </dl>

          <div class="d-flex justify-content-between align-items-center">
            <span class="badge <%= @client.client? ? 'bg-success' : 'bg-primary' %>">
              <%= @client.client? ? 'Cliente' : 'Propietario' %>
            </span>
            <%= link_to 'Volver', user_clients_path(@client.owner || current_user), class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container py-4">
  <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between mb-4">
    <h1 class="h3 mb-3 mb-md-0"><%= @client.name %></h1>
    <div class="d-flex">
      <%= link_to 'Ir al panel', client_dashboard_path, class: 'btn btn-primary me-2' %>
      <%= link_to 'Volver', user_clients_path(current_user), class: 'btn btn-secondary' %>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <p class="mb-2"><strong>Email:</strong> <%= @client.email %></p>
      <% if @client.company_name.present? %>
        <p class="mb-0"><strong>Empresa:</strong> <%= @client.company_name %></p>
      <% end %>
    </div>
  </div>
</div>