<div class="container py-4 dashboard-view" data-controller="table-filter">
  <div class="d-flex flex-wrap justify-content-between align-items-start gap-3 mb-4">
    <div>
      <h1 class="h3 mb-1">Catálogos personalizados</h1>
      <p class="text-muted mb-0">Gestiona las conversaciones con el asistente y genera catálogos definitivos.</p>
    </div>
    <%= button_to 'Iniciar nueva conversación', data_collections_path, method: :post, class: 'btn btn-primary btn-lg' %>
  </div>

  <% if @catalogues.blank? %>
    <div class="empty-state text-center py-5 border rounded bg-light-subtle">
      <i class="bi bi-inboxes display-6 text-muted" aria-hidden="true"></i>
      <p class="mt-3 mb-1 fw-semibold">Todavía no has iniciado ninguna toma de datos.</p>
      <p class="text-muted mb-0">Pulsa “Iniciar nueva conversación” para comenzar.</p>
    </div>
  <% else %>
    <% grouped = @catalogues.group_by(&:status) %>
    <div class="row g-3 mb-4">
      <% { 'draft' => ['Pendiente', 'bg-status-pending'], 'ready' => ['Listo', 'bg-status-ready'], 'failed' => ['Requiere acción', 'bg-status-alert'] }.each do |status, (label, badge_class)| %>
        <div class="col-md-4">
          <div class="card shadow-sm h-100" data-state="<%= status == 'failed' ? 'alert' : (status == 'ready' ? 'ready' : 'pending') %>">
            <div class="card-body">
              <p class="text-muted text-uppercase small mb-1"><%= label %></p>
              <div class="d-flex align-items-center gap-2">
                <h2 class="h4 mb-0"><%= grouped[status]&.size || 0 %></h2>
                <span class="badge <%= badge_class %>"><%= label %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="card shadow-sm border-0">
      <div class="card-body">
        <div class="row g-3 align-items-end mb-3">
          <div class="col-md-6">
            <label for="catalogue-search" class="form-label">Buscar</label>
            <input id="catalogue-search" type="search" class="form-control" placeholder="ID o estado" data-table-filter-target="search" data-action="input->table-filter#filter">
          </div>
          <div class="col-md-3">
            <label for="catalogue-status" class="form-label">Estado</label>
            <select id="catalogue-status" class="form-select" data-table-filter-target="status" data-action="change->table-filter#filter">
              <option value="all">Todos</option>
              <option value="draft">Pendiente</option>
              <option value="ready">Listo</option>
              <option value="failed">Requiere acción</option>
            </select>
          </div>
        </div>
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Estado</th>
                <th scope="col">Creado</th>
                <th scope="col">Actualizado</th>
                <th scope="col" class="text-end">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @catalogues.each do |catalogue| %>
                <% label, badge_class = case catalogue.status
                                       when 'ready' then ['Listo', 'bg-status-ready']
                                       when 'failed' then ['Requiere acción', 'bg-status-alert']
                                       else ['Pendiente', 'bg-status-pending']
                                       end %>
                <tr data-table-filter-target="row" data-table-filter-search-value="<%= [catalogue.id, label].join(' ') %>" data-table-filter-status="<%= catalogue.status %>">
                  <td><code>#<%= catalogue.id %></code></td>
                  <td><span class="badge <%= badge_class %>"><%= label %></span></td>
                  <td><%= l(catalogue.created_at, format: :short) %></td>
                  <td><%= l(catalogue.updated_at, format: :short) %></td>
                  <td class="text-end">
                    <div class="btn-group" role="group">
                      <%= link_to 'Ver conversación', data_collection_path(catalogue), class: 'btn btn-outline-primary btn-sm' %>
                      <% if catalogue.ready? %>
                        <%= link_to 'Descargar JSON', data_collection_path(catalogue, format: :json), class: 'btn btn-outline-secondary btn-sm', data: { turbo: false } %>
                      <% elsif catalogue.failed? %>
                        <%= link_to 'Reintentar', finalize_data_collection_path(catalogue), class: 'btn btn-outline-danger btn-sm', data: { turbo_method: :post, turbo_confirm: 'Regenerar catálogo fallido. ¿Continuar?' } %>
                      <% else %>
                        <%= link_to 'Generar definitivo', finalize_data_collection_path(catalogue), class: 'btn btn-success btn-sm', data: { turbo_method: :post, turbo_confirm: 'Esto pedirá al asistente que genere el catálogo final. ¿Continuar?' } %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <p class="text-center text-muted d-none" data-table-filter-target="empty">No hay resultados para los filtros seleccionados.</p>
      </div>
    </div>
  <% end %>
</div>
