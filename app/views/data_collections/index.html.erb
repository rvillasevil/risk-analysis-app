<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Catálogos personalizados</h1>
    <%= button_to 'Iniciar nueva conversación', data_collections_path, method: :post, class: 'btn btn-primary' %>
  </div>

  <% if @catalogues.blank? %>
    <p class="text-muted">Todavía no has iniciado ninguna toma de datos con el LLM.</p>
  <% else %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Estado</th>
          <th>Creado</th>
          <th>Actualizado</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @catalogues.each do |catalogue| %>
          <tr>
            <td><%= catalogue.id %></td>
            <td><span class="badge bg-secondary"><%= catalogue.status.humanize %></span></td>
            <td><%= l(catalogue.created_at, format: :short) %></td>
            <td><%= l(catalogue.updated_at, format: :short) %></td>
            <td class="text-end">
              <%= link_to 'Ver conversación', data_collection_path(catalogue), class: 'btn btn-sm btn-outline-primary' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>