<%= render "devise/shared/auth_layout" do %>
  <h2 class="h3 fw-bold text-center mb-2">Iniciar sesión</h2>
  <p class="text-muted text-center mb-4">
    Accede a tu panel para continuar gestionando riesgos, documentos y conversaciones con tus clientes.
  </p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :email, "Correo electrónico", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mb-3">
      <div class="d-flex justify-content-between align-items-center">
        <%= f.label :password, "Contraseña", class: "form-label mb-0" %>
        <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "small" %>
      </div>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-4">
        <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
        <%= f.label :remember_me, "Recuérdame", class: "form-check-label", for: "remember_me" %>
      </div>
    <% end %>

    <div class="d-grid">
      <%= f.submit "Entrar", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-4">
    <p class="fw-semibold text-uppercase small text-muted mb-2">Atajos útiles</p>
    <ul class="list-unstyled lh-lg mb-0">
      <li>
        <i class="bi bi-building me-2 text-primary"></i>
        <%= link_to "Dar de alta a mi correduría", new_owner_registration_path, class: "text-decoration-none" %>
      </li>
      <li>
        <i class="bi bi-envelope-plus me-2 text-primary"></i>
        <%= link_to "Solicitar invitación como cliente", "https://calendly.com/rvillasevil/30min", target: "_blank", rel: "noopener", class: "text-decoration-none" %>
      </li>
    </ul>
  </div>
<% end %>
