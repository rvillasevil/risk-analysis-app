<div class="container py-4 dashboard-view" data-controller="table-filter">
  <div class="d-flex flex-wrap justify-content-between align-items-start gap-3 mb-4">
    <div>
      <h1 class="h3 mb-1">Documentos de <%= @data_collection.name %></h1>
      <p class="text-muted mb-0">Archivos compartidos durante la toma de datos, listos para descargar.</p>
    </div>
    <div class="d-flex flex-wrap gap-2">
      <%= link_to 'Ver conversación', risk_assistant_path(@data_collection), class: 'btn btn-outline-primary' %>
      <%= link_to 'Volver a tomas de datos', data_collections_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>
  <% if alert %>
    <div class="alert alert-danger"><%= alert %></div>
  <% end %>

  <% if @documents.any? %>
    <% total_size = @documents.sum { |doc| doc.blob.byte_size } %>
    <div class="row g-3 mb-4">
      <div class="col-md-4">
        <div class="card shadow-sm" data-state="ready">
          <div class="card-body">
            <p class="text-muted text-uppercase small mb-1">Archivos</p>
            <h2 class="h4 mb-0"><%= @documents.size %></h2>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card shadow-sm" data-state="pending">
          <div class="card-body">
            <p class="text-muted text-uppercase small mb-1">Peso total</p>
            <h2 class="h4 mb-0"><%= number_to_human_size(total_size) %></h2>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card shadow-sm" data-state="ready">
          <div class="card-body">
            <p class="text-muted text-uppercase small mb-1">Última subida</p>
            <h2 class="h4 mb-0"><%= l(@documents.first.created_at, format: :short) %></h2>
          </div>
        </div>
      </div>
    </div>

    <div class="card shadow-sm border-0">
      <div class="card-body">
        <div class="row g-3 align-items-end mb-3">
          <div class="col-md-6">
            <label for="documents-search" class="form-label">Buscar</label>
            <input id="documents-search" type="search" class="form-control" placeholder="Nombre o tipo" data-table-filter-target="search" data-action="input->table-filter#filter">
          </div>
          <div class="col-md-3">
            <label for="documents-type" class="form-label">Tipo</label>
            <select id="documents-type" class="form-select" data-table-filter-target="status" data-action="change->table-filter#filter">
              <option value="all">Todos</option>
              <option value="pdf">PDF</option>
              <option value="image">Imagen</option>
              <option value="doc">Documento</option>
              <option value="other">Otros</option>
            </select>
          </div>
        </div>

        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th scope="col">Documento</th>
                <th scope="col">Fecha</th>
                <th scope="col">Tamaño</th>
                <th scope="col" class="text-end">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @documents.each do |document| %>
                <% filename = document.filename.to_s %>
                <% extension = filename.split('.').last.to_s.downcase %>
                <% type = case extension
                         when 'pdf' then 'pdf'
                         when 'jpg', 'jpeg', 'png', 'gif', 'webp' then 'image'
                         when 'doc', 'docx', 'txt' then 'doc'
                         else 'other'
                         end %>
                <tr data-table-filter-target="row" data-table-filter-search-value="<%= [filename, type].join(' ') %>" data-table-filter-status="<%= type %>">
                  <td>
                    <div class="d-flex align-items-center gap-2">
                      <i class="bi <%= file_icon_for(document) %> text-muted" aria-hidden="true"></i>
                      <%= link_to filename, url_for(document), target: '_blank', rel: 'noopener', class: 'text-decoration-none fw-medium' %>
                    </div>
                  </td>
                  <td><%= l document.created_at, format: :short %></td>
                  <td><%= number_to_human_size(document.blob.byte_size) %></td>
                  <td class="text-end">
                    <div class="btn-group" role="group">
                      <%= link_to 'Descargar', rails_blob_path(document, disposition: 'attachment'), class: 'btn btn-outline-primary btn-sm' %>
                      <%= link_to 'Eliminar', file_risk_assistant_path(@data_collection, document), data: { turbo_method: :delete, turbo_confirm: '¿Estás seguro de eliminar este documento?' }, class: 'btn btn-outline-danger btn-sm' %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <p class="text-center text-muted d-none" data-table-filter-target="empty">No hay documentos que coincidan con la búsqueda.</p>
      </div>
    </div>
  <% else %>
    <div class="text-center py-5 border rounded bg-light-subtle">
      <p class="mb-2 fw-semibold">No hay documentos cargados todavía.</p>
      <p class="mb-0 text-muted">Sube archivos desde la conversación de la toma de datos para verlos aquí.</p>
    </div>
  <% end %>
</div>